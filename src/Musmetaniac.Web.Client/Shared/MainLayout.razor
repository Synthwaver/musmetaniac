@inherits LayoutComponentBase

<Layout Class="layout">
    <MainLayoutHeader OnNavMenuButtonClick="() => _isCollapsibleNavMenuOpen = true"/>
    <Layout Class="layout mainLayout">
        <NavMenuSidebar
            IsCollapsibleNavMenuOpen="_isCollapsibleNavMenuOpen"
            OnCollapsibleNavMenuClose="() => _isCollapsibleNavMenuOpen = false"
        />
        <Layout Class="contentLayout">
            <Content>
                @Body
            </Content>
        </Layout>
    </Layout>
</Layout>

@code
{
    private bool _isCollapsibleNavMenuOpen;
}
